# Пример файла конфигурации (.env)
# Скопируйте этот файл в .env и заполните своими значениями

# Основные настройки приложения
APP_NAME="Система автоматической оценки экзаменов"
VERSION="1.0.0"
DEBUG=True
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development

# База данных PostgreSQL
DATABASE_URL=postgresql://exam_user:exam_password@localhost:5432/exam_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=exam_db
DB_USER=exam_user
DB_PASSWORD=exam_password

# Безопасность
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Пути к файлам и моделям
ML_MODEL_PATH=ml_models/models/exam_scorer.pkl
VECTORIZER_PATH=ml_models/models/vectorizer.pkl
UPLOAD_DIR=uploads
TEMP_DIR=temp
MAX_FILE_SIZE=10485760

# Аудио обработка
AUDIO_UPLOAD_DIR=uploads/audio
MAX_AUDIO_SIZE=52428800
SUPPORTED_AUDIO_FORMATS=.mp3,.wav,.m4a,.ogg

# Внешние API (опционально)
SPEECH_RECOGNITION_API_KEY=your-google-speech-api-key
YANDEX_SPEECH_API_KEY=your-yandex-speech-api-key

# Логирование
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Redis (для кэширования)
REDIS_URL=redis://localhost:6379/0

# Email настройки (для уведомлений)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@exam-ai.ru

# Мониторинг и аналитика
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id

# Файловое хранилище (для продакшена)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=exam-ai-storage
AWS_REGION=us-east-1

# Telegram Bot (для уведомлений)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id